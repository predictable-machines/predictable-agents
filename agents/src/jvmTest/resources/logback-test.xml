<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Enable TRACE logging for Koog HTTP client to see request/response bodies -->
    <logger name="ai.koog.http.client.ktor" level="TRACE"/>
    <logger name="ai.koog.prompt.executor.clients.openai" level="TRACE"/>

    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>
